<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
        <item name = "android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--민승-->
    <!--싹 컬러-->
    <style name="ssakTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#46AE7F</item>
        <item name="colorControlNormal">#C6C6C6</item>
        <item name="android:alertDialogTheme">@style/ssakDialogTheme</item>
    </style>

    <style name="ssakDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#46AE7F</item>
    </style>

</resources>
