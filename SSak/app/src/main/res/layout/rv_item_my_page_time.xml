<?xml version="1.0" encoding="utf-8"?>

<!-- Customized by 민승 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/rv_item_mypage_time_day"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rv_item_mypage_time_start"
            android:layout_marginRight="18dp"
            android:src="@drawable/sellerregisteration_sunday" />

        <TextView
            android:id="@+id/rv_item_time_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="-"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/rv_item_mypage_time_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:textSize="22dp"
            android:text="휴무"/>

        <TextView
            android:id="@+id/rv_item_mypage_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rv_item_time_fix"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:textSize="22dp"
            android:text="시작 시간" />

        <TextView
            android:id="@+id/rv_item_mypage_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rv_item_time_fix"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:textSize="22dp"
            android:text="마감 시간" />

    </RelativeLayout>

</RelativeLayout>