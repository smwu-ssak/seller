<?xml version="1.0" encoding="utf-8"?>

<!-- Customized by 민승 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#F2F2F2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rv_item_main_products_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/rv_main_apple" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F2F2F2"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="14dp"
            android:layout_marginLeft="10dp">

            <!--이름-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/rv_item_main_products_name_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothicbold_normal"
                    android:text="이름"
                    android:textColor="#424242"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/rv_item_main_products_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rv_item_main_products_name_fix"
                    android:fontFamily="@font/nanumbarungothic_normal"
                    android:text="사과"
                    android:textColor="#818181"
                    android:textSize="18dp" />

            </RelativeLayout>

            <!--포로 수-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/rv_item_main_products_quantity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothicbold_normal"
                    android:text="포로 수"
                    android:textColor="#424242"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/rv_item_main_products_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/rv_item_main_products_quantity_name"
                    android:fontFamily="@font/nanumbarungothic_normal"
                    android:text="5"
                    android:textColor="#818181"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/rv_item_main_products_quantity_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rv_item_main_products_quantity"
                    android:fontFamily="@font/nanumbarungothic_normal"
                    android:text="개"
                    android:textColor="#818181"
                    android:textSize="18dp" />

            </RelativeLayout>

            <!--가격-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/rv_item_main_products_price_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothic_normal"
                    android:text="1,000"
                    android:textColor="#B4B3B3"
                    android:textSize="18dp" />

                <!-- Cusotmized by SY-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <FrameLayout
                        android:id="@+id/rv_item_main_products_price_origin_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:background="#707070" />

                    </FrameLayout>

                </LinearLayout>

                <!-- Customized by SY-->

                <TextView
                    android:id="@+id/rv_item_main_products_price_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rv_item_main_products_price_origin"
                    android:fontFamily="@font/nanumbarungothicbold_normal"
                    android:text="500"
                    android:textColor="#46AE7F"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/rv_item_main_products_price_fix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rv_item_main_products_price_sale"
                    android:fontFamily="@font/nanumbarungothicbold_normal"
                    android:text="원"
                    android:textColor="#46AE7F"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/rv_item_main_products_price_fix">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_discount_rate_circle" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/rv_item_main_products_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/nanumbarungothic_normal"
                            android:text="50"
                            android:textColor="#FFFFFF"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/rv_item_main_products_discount_fix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/nanumbarungothic_normal"
                            android:text="%"
                            android:textColor="#FFFFFF"
                            android:textSize="9dp" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>