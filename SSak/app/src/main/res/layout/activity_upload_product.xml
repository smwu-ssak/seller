<?xml version="1.0" encoding="utf-8"?>

<!-- Customized by SY -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECECEC"
    tools:context=".UploadProductActivity">

    <RelativeLayout
        android:id="@+id/upload_act_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/upload_act_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">

            <!--뒤로 가기 버튼-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/sellerview_previouspage"
                android:background="?android:selectableItemBackground"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="상품 등록"
            android:textSize="22dp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/nanumbarungothicbold_normal"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#808080"
        android:layout_alignBottom="@id/upload_act_toolbar"/>

    <!--하단 버튼-->
    <RelativeLayout
        android:id="@+id/upload_act_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#46AE7F">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="업로드 하기"
            android:textSize="24dp"
            android:fontFamily="@font/nanumbarungothicbold_normal"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

    <!--뷰-->
    <ScrollView
        android:id="@+id/upload_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="67dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/upload_product_img_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/custom_dot_line">

                <ImageView
                    android:id="@+id/upload_product_img_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/detailview_productphoto"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="16dp"/>

            </RelativeLayout>

            <!--상품명-->
            <LinearLayout
                android:id="@+id/upload_product_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/upload_product_img_layout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/upload_product_comments_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nanumbarungothicultralight_normal"
                        android:hint="설명을 등록해주세요 (20자 이내)"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/upload_product_name_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/upload_product_comments_et"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:hint="이름을 등록해주세요 (10자 이내)"
                        android:textColor="#A8A8A8"
                        android:textSize="24dp" />

                </RelativeLayout>

            </LinearLayout>

            <!--가게-->
            <LinearLayout
                android:id="@+id/upload_store_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/upload_product_description_layout"
                android:layout_marginTop="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <!--가게 주인 프로필 사진-->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/upload_store_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/detailview_sellerprofile" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/upload_store_image"
                            android:layout_centerVertical="true">

                            <RelativeLayout
                                android:id="@+id/upload_store_name_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/store_name_from_fix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanumbarungothicultralight_normal"
                                    android:text="from"
                                    android:textColor="#000000"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/upload_store_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_toRightOf="@id/store_name_from_fix"
                                    android:fontFamily="@font/nanumbarungothicbold_normal"
                                    android:text="프라임 마트"
                                    android:textColor="#000000"
                                    android:textSize="14dp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/upload_store_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/upload_store_name_layout"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/nanumbarungothicultralight_normal"
                                android:text="서울특별시 용산구 청파로47길 49"
                                android:textColor="#918B8A"
                                android:textSize="12dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <!--상세 정보 칸-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_store_layout"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="30dp"
                android:background="@drawable/custom_shadow">

                <!--구출 요청, 수명, 구조 지점-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <!--구출 요청-->
                        <RelativeLayout
                            android:id="@+id/products_fix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/upload_products_quantity_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/nanumbarungothicbold_normal"
                                android:textColor="#3A3A3A"
                                android:textSize="14dp"
                                android:text="구출 요청"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/upload_products_quantity_top"
                                android:layout_marginTop="1dp"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/upload_products_quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/nanumbarungothicbold_normal"
                                    android:textColor="#A8A8A8"
                                    android:textSize="40dp"
                                    android:text="0"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_toRightOf="@id/upload_products_quantity"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/nanumbarungothicbold_normal"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14dp"
                                    android:text="개"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <!--수명-->
                        <RelativeLayout
                            android:id="@+id/timeleft_fix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/products_fix"
                            android:layout_marginLeft="35dp">

                            <TextView
                                android:id="@+id/upload_products_timeleft_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/nanumbarungothicbold_normal"
                                android:textColor="#3A3A3A"
                                android:textSize="14dp"
                                android:text="수명"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/upload_products_timeleft_top"
                                android:layout_marginTop="1dp"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/upload_products_timeleft_fix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/nanumbarungothicbold_normal"
                                    android:textColor="#3A3A3A"
                                    android:textSize="40dp"
                                    android:text="D-"/>

                                <TextView
                                    android:id="@+id/upload_products_timeleft"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toRightOf="@id/upload_products_timeleft_fix"
                                    android:fontFamily="@font/nanumbarungothicbold_normal"
                                    android:textColor="#A8A8A8"
                                    android:textSize="40dp"
                                    android:text="DAY"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <!--구조 지점까지
                        <RelativeLayout
                            android:id="@+id/distance_fix"
                            android:layout_width="wrap_content"
                            android:layout_height="67dp"
                            android:layout_toRightOf="@id/timeleft_fix"
                            android:layout_marginLeft="35dp">

                            <TextView
                                android:id="@+id/detail_act_products_distance_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/nanumbarungothicbold_normal"
                                android:textColor="#3A3A3A"
                                android:textSize="14dp"
                                android:text="구조 지점까지"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/detail_act_products_distance_top"
                                android:layout_marginTop="1dp"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/detail_act_products_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanumbarungothicbold_normal"
                                    android:textColor="#3A3A3A"
                                    android:textSize="42dp"
                                    android:text="368"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/detail_act_products_distance"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/nanumbarungothicbold_normal"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14dp"
                                    android:text="m"/>

                            </RelativeLayout>

                        </RelativeLayout>
                        -->

                    </RelativeLayout>

                </RelativeLayout>

                <!--지도, 지도 설명-->

                <!--박스-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/upload_store_location_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        android:layout_marginHorizontal="56dp">

                        <RelativeLayout
                            android:id="@+id/map_view"
                            android:layout_width="match_parent"
                            android:layout_height="250dp">

<!--                        <ImageView-->
<!--                            android:id="@+id/detail_act_img_gps"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_centerHorizontal="true"-->
<!--                            android:src="@drawable/detailview_mappreview" />-->

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/map_view"
                            android:background="#63C194">

                            <TextView
                                android:id="@+id/upload_gps_store_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/nanumbarungothicbold_normal"
                                android:text="프라임 마트"
                                android:textColor="#F7F7F7"
                                android:textSize="19dp" />

                            <TextView
                                android:id="@+id/upload_gps_store_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/upload_gps_store_name"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/nanumbarungothiclight_normal"
                                android:text="서울특별시 용산구 청파로 47길 49"
                                android:textColor="#F7F7F7"
                                android:textSize="14dp" />

                            <!--가게 번호-->
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/upload_gps_store_address"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="22dp"
                                android:layout_marginBottom="6dp">

                                <TextView
                                    android:id="@+id/store_num_tel_fix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanumbarungothiclight_normal"
                                    android:text="T."
                                    android:textColor="#F7F7F7"
                                    android:textSize="14dp" />

                                <!--번호-->
                                <TextView
                                    android:id="@+id/detail_act_store_contact"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="3dp"
                                    android:layout_toRightOf="@id/store_num_tel_fix"
                                    android:fontFamily="@font/nanumbarungothiclight_normal"
                                    android:text="02-2662-9826"
                                    android:textColor="#F7F7F7"
                                    android:textSize="14dp" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="26dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <View
                            android:layout_width="167dp"
                            android:layout_height="1dp"
                            android:layout_centerHorizontal="true"
                            android:background="#BDBDBD" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/products_price_quantity_fix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/nanumbarungothiclight_normal"
                                android:textColor="#46AE7F"
                                android:textSize="22dp"
                                android:text="한 개당" />

                            <!--이전 가격-->
                            <EditText
                                android:id="@+id/upload_products_price_origin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/products_price_quantity_fix"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumbarungothicbold_normal"
                                android:textColor="#CCCCCC"
                                android:textSize="22dp"
                                android:hint="원가 입력" />

                            <EditText
                                android:id="@+id/detail_act_products_price_sale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/upload_products_price_origin"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumbarungothicbold_normal"
                                android:textColor="#46AE7F"
                                android:textSize="22dp"
                                android:hint="할인가 입력"/>

                        </RelativeLayout>

                    </RelativeLayout>
                    
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>