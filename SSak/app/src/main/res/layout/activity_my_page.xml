<?xml version="1.0" encoding="utf-8"?>

<!--Customized by 민승-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    tools:context=".MyPageActivity">

    <!--상단-->
    <RelativeLayout
        android:id="@+id/mypage_act_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ECECEC">

        <RelativeLayout
            android:id="@+id/mypage_act_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="?android:selectableItemBackground"
            android:padding="6dp">

            <!--뒤로 가기 버튼-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/purchaseview_previousarrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothicbold_normal"
            android:text="마이페이지"
            android:textColor="#3A3A3A"
            android:textSize="24dp" />

    </RelativeLayout>

    <!--하단-->
    <RelativeLayout
        android:id="@+id/mypage_act_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="legal v. 3.369.100001"
            android:textColor="#A0A0A0"
            android:textSize="13dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@id/mypage_act_bottom_btn"
        android:background="#D8D8D8" />

    <!--메인-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mypage_act_toolbar"
        android:orientation="vertical"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <RelativeLayout
                android:id="@+id/mypage_act_user_profile_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mypage_act_user_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/mypage_basicprofile" />

                <TextView
                    android:id="@+id/mypage_act_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mypage_act_user_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumbarungothicbold_normal"
                    android:text="럭키 슈퍼렛"
                    android:textColor="#3A3A3A"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/mypage_act_profile_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="12dp"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="4dp"
                        android:text="프로필 수정"
                        android:textColor="#3A3A3A"
                        android:textSize="22dp" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/mypage_act_profile_edit_btn"
                        android:layout_centerHorizontal="true"
                        android:background="#D8D8D8" />

                    <TextView
                        android:id="@+id/mypage_act_FAQ_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mypage_act_profile_edit_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="12dp"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="4dp"
                        android:text="FAQ"
                        android:textColor="#3A3A3A"
                        android:textSize="22dp" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/mypage_act_FAQ_btn"
                        android:layout_centerHorizontal="true"
                        android:background="#D8D8D8" />

                    <TextView
                        android:id="@+id/mypage_act_contact_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mypage_act_FAQ_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="12dp"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="4dp"
                        android:text="싹 팀 연락"
                        android:textColor="#3A3A3A"
                        android:textSize="22dp" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/mypage_act_contact_btn"
                        android:layout_centerHorizontal="true"
                        android:background="#D8D8D8" />

                    <TextView
                        android:id="@+id/mypage_act_setting_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mypage_act_contact_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="12dp"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="4dp"
                        android:text="어플 설정"
                        android:textColor="#3A3A3A"
                        android:textSize="22dp" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>